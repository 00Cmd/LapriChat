<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.macbookair.laprichat.Activitys.UserActions.SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/activity_settings_circle_image_view"
        android:src="@drawable/default_avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:text="UserName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/activity_settings_username" />

    <TextView
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:text="Hello i'm using laprichat."
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_settings_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/activity_settings_user_status" />

    <Button
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:background="@color/colorAccent"
        android:textColor="@color/colorWhite"
        android:text="Change Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_settings_user_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/activity_settings_status_btn" />

    <Button
        android:layout_marginTop="20dp"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
        android:background="@color/colorWhite"
        android:textColor="@color/colorDarkGray"
        android:text="Change Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_settings_status_btn"
        android:layout_centerHorizontal="true"
        android:id="@+id/activity_settings_image_btn" />

</RelativeLayout>
